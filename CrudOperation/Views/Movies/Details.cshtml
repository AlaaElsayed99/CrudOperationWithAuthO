@model Movie
@{
    ViewData["Title"] = "Details";
}

<h2>Details @Model.Title</h2>
<div class="col-12">
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-2 " >
                <img src="data:image\/*;base64,@(Convert.ToBase64String(Model.Poster))"  style="width:100%; height:100%; max-height:250px;">
            </div>
            <div class="col-md-10 ">
                <div class="card-body d-flex flex-column justfy-content-between h-100">
                    <div>
                        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
                        <span>
                            <i class="bi bi-star-fill text-warning"></i>
                            <span class="text-muted">@Model.rate.ToString("0.0")</span>
                        </span>
                        <span>
                            <i class="bi bi-film"></i>
                            <span class="text-muted" value="@Model.GenreId">@Model.Genres.Name</span>
                        </span>
                       
                        
                    </div>
                    
                   
                    <p class="card-text text-justify">@Model.StoryLine</p>
                   @if(User.Identity.IsAuthenticated){

                        <div>
                            @if(User.IsInRole("Admin")){
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            }
                            <a asp-action="Index"class="btn btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                                Back To Movies
                            </a>
                            
                     
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>


