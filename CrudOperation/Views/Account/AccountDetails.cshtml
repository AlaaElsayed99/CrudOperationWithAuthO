@model AppUser
@{
    ViewData["Title"] = "AccountDetails";
}

<h3> @Model.FirstName @Model.LastName</h3>
<div  style="width: 400px">
    <img  src="data:image\/*;base64,@(Convert.ToBase64String(Model.Image))" style="width:100%; height:100%; max-height:200px;border-radius:50%">
    <div class="card-body">

        <h5 class="card-title">Name: @Model.FirstName @Model.LastName</h5>
        <p class="card-text">Address: @Model.Address</p>
        <p class="card-text">Email: @Model.Email</p>
        <p class="card-text">PhoneNumber: @Model.PhoneNumber</p>


        <div class="form-group">
            <a asp-action="Edit" asp-controller="Account" class="btn btn-primary" asp-route-Id="@Model.Id">Edit Profile</a>
            <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-primary" asp-route-Id="@Model.Id">Change Password</a>
        </div>
    </div>
</div>

